<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingsFragment">

        <ScrollView
            android:id="@+id/svSettings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/autour_one"
                    android:text="@string/settings_button"
                    android:textAlignment="textStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnPlayTestSound"
                    style="@style/Widget.MaterialComponents.FloatingActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="320dp"
                    android:backgroundTint="@android:color/holo_red_light"
                    android:text="PLAY EQ CALIBRATION TEST SOUND" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:text="Setting One" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:text="Setting Two" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:text="Setting Three" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:text="Setting Four" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:text="Setting Five" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:text="Setting Six" />


            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>